# MidiDrumiGen v2.0 Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string (v2.0 requirement)
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/mididrumigen_db

# ============================================================================
# LLM PROVIDER API KEYS (v2.0 Core Feature)
# ============================================================================
# Anthropic Claude 3.5 Sonnet (Primary LLM)
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini 2.5/3 (Secondary LLM)
GOOGLE_API_KEY=AIza...

# OpenAI ChatGPT 5.1 (Tertiary/Fallback LLM)
OPENAI_API_KEY=sk-...

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis connection string for caching and message broker
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
# Celery task queue broker and result backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# OPTIONAL RESEARCH APIS
# ============================================================================
# YouTube API (for audio analysis and tutorial transcript analysis)
YOUTUBE_API_KEY=your_youtube_api_key_here

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# Environment mode: development, staging, production
ENVIRONMENT=development

# Debug mode (disable in production)
DEBUG=True

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000

# ============================================================================
# RESEARCH PIPELINE SETTINGS (Optional)
# ============================================================================
# Research timeout in minutes (default: 20)
RESEARCH_TIMEOUT_MINUTES=20

# Minimum sources required for style profile creation
MIN_SOURCES_TOTAL=10
